<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qf.mapper.UserMapper">


    <select id="findAll" resultType="com.qf.pojo.TUsers">
        select * from t_users
    </select>
    <select id="findById" resultType="com.qf.pojo.TUsers">
        select * from t_users where id = #{id}
    </select>
    <select id="findByUserNameAndPasswordWithMap" resultType="com.qf.pojo.TUsers">
        select * from t_users where name = #{name} and password = #{password}
    </select>
    <select id="findByUnameAndPasswordWithPojo" resultType="com.qf.pojo.TUsers">
        select * from t_users where name = #{name} and password = #{password}
    </select>
    <select id="findByUnameAndPassword" resultType="com.qf.pojo.TUsers">
        select * from t_users where name = #{name} and password = #{password}
    </select>
    <select id="findByNameLike" resultType="com.qf.pojo.TUsers">
        select * from t_users where name like concat("%",#{likeName},"%")
    </select>
    <select id="findBySexLike" resultType="com.qf.pojo.TUsers">
        select * from t_users where sex like concat("%",#{likeSex},"%")
    </select>
</mapper>